<h2 class="subhead navbar text-center alert"><%= t(:listing_categories) %></h2>

<table class="table">
  <thead>
    <tr>
      <th class="text-center"><%= t(:name) %></th>
      <th colspan="3"  class="text-center action"><%= t(:action)%></th>
    </tr>
  </thead>
    <tbody class="text-center">
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td class="action"><%= link_to 'Detalhar', category, class: 'btn btn-info' %></td>
          <td><%= link_to 'Editar', edit_category_path(category), class: 'btn btn-warning' %></td>
          <td class="action"><%= link_to 'Excluir', category, method: :delete, data: { confirm: t(:confirm_destroy) }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
</table>

<br>

<%= link_to t(:new_category), new_category_path, class: 'btn btn-primary'%>
<%= link_to t(:back), root_path,  class: 'btn btn-default back2' %>
