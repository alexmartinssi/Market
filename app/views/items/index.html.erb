<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.product.description %></td>
        <td><%= item.quantity %></td>
        <td><%= item.price %></td>
        <td><%= link_to 'Detalhar', item, class: 'btn btn-info' %></td>
        <td><%= link_to 'Editar', edit_item_path(item), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Excluir', item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
