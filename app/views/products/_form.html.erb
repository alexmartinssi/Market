<div class="text-center">
    <%= form_for(@product) do |f| %>
      <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
          <% @product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.text_field :bar_code, placeholder: 'Código de Barra',class: 'form-control sel' %>
      </div>
      <div class="field">
        <%= f.text_field :description, placeholder: 'Descrição',class: 'form-control sel' %>
      </div>
      <div class="field">
        <%= f.text_field :price, placeholder: 'Preço', class: 'form-control sel' %>
      </div>
      <div class="field">
        <%= f.number_field :quantity, placeholder: 'Quantidade', class: 'form-control sel' %>
      </div>
      <div class="field">
        <%= f.label :unit_id, t(:unit_choice) %><br>
        <%= f.select :unit_id, options_for_select(Unit.all.map {|unit| [unit.description,unit.id]}), {}, class: 'form-control sel' %>
      </div>
      <div class="field">
        <%= f.label :category_id, t(:category_choice) %><br>
        <%= f.select :category_id, options_for_select(Category.all.map {|category| [category.name,category.id]}), {}, class: 'form-control sel' %>
      </div>
      <div class="actions">
        <%= f.submit nil, class: 'btn btn-primary' %><%= link_to t(:back), products_path, class: 'btn btn-default back'%>
      </div>
    <% end %>
</div>
