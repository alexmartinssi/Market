<h2 class="subhead navbar text-center alert">Compras</h2>

<table class="table">
  <thead>
    <tr>
      <!--<th>Item</th>-->
      <th class="text-center">CÃ³digo</th>
      <th class="text-center">Fornecedor</th>
      <!--<th class="text-center">Valor da Compra</th>-->
      <th class="text-center">Data da compra</th>
      <th colspan="3" class="text-center"><%= t(:action)%></th>
    </tr>
  </thead>

  <tbody class="text-center">
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.id %></td>
        <td><%= purchase.supplier.name %></td>
        <!--<td><%= purchase.total %></td>-->
        <td><%= purchase.created_at.strftime("%d/%m/%Y")%></td>
        <td><%= link_to 'Comprar Mercadorias', purchase, class: 'btn btn-info' %></td>
        <td><%= link_to 'Editar', edit_purchase_path(purchase), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Excluir', purchase, method: :delete, data: { confirm: t(:confirm_destroy)  }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Compra', new_purchase_path,class: 'btn btn-primary' %>
