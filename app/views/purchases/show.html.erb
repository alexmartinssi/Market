<h2 class="subhead navbar text-center alert"><%= t(:details) %></h2>

<div class="scheduler-border">
  <p>
    <strong>Fornecedor:</strong> <%= @purchase.supplier.name %>
  </p>
  <br/>
  <fieldset>
    <legend>Produtos</legend>
    <% @purchase.items.each do |item| %>
        <p>
          <strong>Produto:</strong>
          <%= item.product.description %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <strong>Quantidade:</strong>
          <%= item.quantity %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <strong>Preço:</strong>
          <%= item.price %>
        </p>
        <hr/>
    <% end %>

    <p>
      <strong>Valor total da compra:  R$</strong>
      <%= @purchase.total %>
    </p>
  <br/>
  </fieldset>

  <fieldset>
    <legend>Adicionar um Produto</legend>
    <%= form_for([@purchase,@purchase.items.build]) do |f| %>
        <div class="field">
          <%= f.label :product_id, "Produto: " %>&nbsp;&nbsp;&nbsp;
          <%= f.select :product_id, options_for_select(Product.all.map{|product| [product.description, product.id]},
                                                       selected: f.object.product_id)%>
          &nbsp;&nbsp;&nbsp;
          <%= f.label :quantity,"Quantidade: " %>&nbsp;&nbsp;&nbsp;<%= f.number_field :quantity%>&nbsp;&nbsp;&nbsp;
          <%= f.label :price,"Preço: " %>&nbsp;&nbsp;&nbsp;<%= f.text_field :price%>&nbsp;&nbsp;&nbsp;
          <%= f.submit nil, class: 'btn btn-success' %>
        </div>
    <% end %>
    </fieldset>
</div>
<%= link_to 'Finalizar Compra', finished_path(@purchase), class: 'btn btn-primary' %>
<%= link_to 'Voltar', purchases_path, class: 'btn btn-default back2' %>
<br><br><br>
