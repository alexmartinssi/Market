<h1>Listing sales</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.item %></td>
        <td><%= sale.total %></td>
        <td><%= link_to 'Detalhar', class: 'btn btn-info' %></td>
        <td><%= link_to 'Editar', edit_sale_path(sale), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Excluir', sale, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

