<h2 class="subhead navbar text-center alert">Estoque</h2>

<table class="table">
  <thead>
    <tr>
      <th class="text-center">Produto</th>
      <th class="text-center">Quantidade</th>
      <th class="text-center">Pre√ßo de Venda</th>
      <th colspan="3" class="text-center"><%= t(:action)%></th>
    </tr>
  </thead>

  <tbody class="text-center">
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.item.product.description %></td>
        <td><%= stock.quantity %></td>
        <td><%= stock.sale_price %></td>
        <!--<td><%= link_to '', stock, class: 'btn btn-default glyphicon glyphicon-th-list' %></td>-->
        <td><%= link_to '', edit_stock_path(stock), class: 'btn btn-default glyphicon glyphicon-edit' %></td>
        <td><%= link_to '', stock, method: :delete, data: { confirm: t(:confirm_destroy) }, class: 'btn btn-default glyphicon glyphicon-trash' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

