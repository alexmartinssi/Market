<h2 class="subhead navbar text-center alert">Listing stocks</h2>

<table class="table">
  <thead>
    <tr>
      <th class="text-center">Item</th>
      <th class="text-center">Supplier</th>
      <th class="text-center">Quantity</th>
      <th class="text-center">Sale price</th>
      <th colspan="3" class="text-center"></th>
    </tr>
  </thead>

  <tbody class="text-center">
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.item.product.description %></td>
        <td><%= stock.supplier.name %></td>
        <td><%= stock.quantity %></td>
        <td><%= stock.sale_price %></td>
        <td><%= link_to '', stock, class: 'btn btn-default glyphicon glyphicon-th-list' %></td>
        <td><%= link_to '', edit_stock_path(stock), class: 'btn btn-default glyphicon glyphicon-edit' %></td>
        <td><%= link_to '', stock, method: :delete, data: { confirm: t(:confirm_destroy) }, class: 'btn btn-default glyphicon glyphicon-trash' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t(:back), root_path, class: 'btn btn-default back2' %>

<%= link_to 'New Stock', new_stock_path %>
