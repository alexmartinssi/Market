<h2 class="subhead navbar text-center alert">Produtos no Estoque</h2>
<table class="table">
  <thead>
    <tr>
      <th class="text-center">Produto</th>
      <th class="text-center">Quantidade</th>
      <th class="text-center">Pre√ßo de Venda</th>
    </tr>
  </thead>

  <tbody class="text-center">
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.item.product.description %></td>
        <td><%= stock.quantity %></td>
        <td><%= stock.sale_price %></td>
        <td><%= link_to 'Editar', edit_stock_path(stock), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Excluir', stock, method: :delete, data: { confirm: t(:confirm_destroy) }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>