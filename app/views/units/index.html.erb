<h2 class="subhead navbar text-center alert"><%= t(:listing_units) %></h2>

<table class="table">
  <thead>
    <tr>
      <th class="text-center"><%=t(:description)%></th>
      <th class="text-center"><%=t(:acronym)%></th>
      <th colspan="3" class="text-center"><%= t(:action)%></th>
    </tr>
  </thead>

  <tbody class="text-center">
    <% @units.each do |unit| %>
      <tr>
        <td><%= unit.description %></td>
        <td><%= unit.acronym %></td>
        <td><%= link_to '', unit, class: 'btn btn-default glyphicon glyphicon-th-list'%></td>
        <td><%= link_to '', edit_unit_path(unit), class: 'btn btn-default glyphicon glyphicon-edit' %></td>
        <td><%= link_to '', unit, method: :delete, data: { confirm: t(:confirm_destroy) }, class: 'btn btn-default glyphicon glyphicon-trash' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t(:new_unit), new_unit_path, class: 'btn btn-primary' %>
<%= link_to t(:back), root_path, class: 'btn btn-default back2' %>